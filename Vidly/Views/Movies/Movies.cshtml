@model List<Movie>

@{
    ViewBag.Title = "Movies";
}

<h2>Movies</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td><a href="Movies/Details/@movie.Id">@movie.Name</a></td>
                <td>@movie.Genre.Name</td>
            </tr>
        }
    </tbody>
</table>